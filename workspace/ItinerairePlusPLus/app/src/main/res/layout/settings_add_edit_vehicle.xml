<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_setting_vehicle_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@color/purple_500"
            android:padding="5dp"
            android:text="Caption"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Type :" />

            <EditText
                android:id="@+id/setting_edit_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:inputType="text"
                android:textSize="15dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Energy :" />

            <EditText
                android:id="@+id/setting_edit_vehicle_energy"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textSize="15dp"
                android:inputType="text" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Distance :" />

            <EditText
                android:id="@+id/setting_edit_vehicle_distance"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textSize="15dp"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Mesure :" />

            <EditText
                android:id="@+id/setting_edit_vehicle_mesure"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textSize="15dp"
                android:inputType="text" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Capacity :" />

            <EditText
                android:id="@+id/setting_edit_vehicle_capacity"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textSize="15dp"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Unit :" />

            <EditText
                android:id="@+id/setting_edit_vehicle_unit"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textSize="15dp"
                android:inputType="text" />

        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAnnuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annuler"
                android:layout_marginRight="8dp"/>

            <Button
                android:id="@+id/btnConfirmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>